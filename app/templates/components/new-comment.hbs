{{#liquid-if addNewComment}}
  <h1>New Comment</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="user">Username</label>
          {{input value=user id="user"}}
        </div>

        <div class="form-group">
          <label for="entry">Enter a Comment:</label>
          {{textarea value=entry id="entry"}}
        </div>

        <button {{action 'save1' post}}>Save</button>
      </form>
    </div>
{{else}}
<button {{action 'commentFormShow'}}>New Comment</button>
{{/liquid-if}}
